<Window x:Class="AnWaSolar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="AnWa-Solar"
        Height="1200"
        Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <DockPanel>
            <materialDesign:ColorZone Mode="PrimaryMid"
                                      DockPanel.Dock="Top"
                                      Padding="16">
                <DockPanel>
                    <TextBlock Text="AnWa-Solar"
                               Foreground="White"
                               FontSize="18"
                               VerticalAlignment="Center" />
                </DockPanel>
            </materialDesign:ColorZone>

            <TabControl Margin="8">
                <TabItem Header="String-Berechnung">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="16"
                                    Orientation="Vertical">

                            <!-- Abschnitt 1: Wechselrichter -->
                            <materialDesign:Card Padding="16"
                                                 Margin="0,0,0,12">
                                <StackPanel Orientation="Vertical">
                                    <DockPanel>
                                        <TextBlock Text="Wechselrichter"
                                                   FontWeight="Bold"
                                                   FontSize="16"
                                                   DockPanel.Dock="Left" />
                                        <Button Content="Wechselrichter auswählen"
                                                DockPanel.Dock="Right"
                                                Click="OnSelectInverterClick"
                                                Margin="8,0,0,0" />
                                    </DockPanel>
                                    <TextBlock x:Name="InverterSummaryText"
                                               Margin="0,8,0,0"
                                               Text="Kein Wechselrichter ausgewählt." />
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Abschnitt 2: Strings (dynamisch pro MPPT) -->
                            <materialDesign:Card Padding="16"
                                                 Margin="0,0,0,12"
                                                 x:Name="StringsCard"
                                                 Visibility="Collapsed">
                                <StackPanel>
                                    <TextBlock Text="Strings"
                                               FontWeight="Bold"
                                               FontSize="16" />
                                    <TextBlock x:Name="StringsHintText"
                                               Margin="0,6,0,12"
                                               Text="Bitte pro MPPT PV-Modul wählen und Anzahl einstellen." />
                                    <StackPanel x:Name="StringsPanel"
                                                Orientation="Vertical" />
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Abschnitt 3: Ergebnisse -->
                            <materialDesign:Card Padding="16"
                                                 Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Ergebnisse"
                                               FontWeight="Bold"
                                               FontSize="16" />
                                    <TextBlock x:Name="ResultsOutput"
                                               Margin="0,8,0,0"
                                               TextWrapping="Wrap"
                                               Text="Keine Berechnung vorhanden." />
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Abschnitt 4: Parameter -->
                            <materialDesign:Card Padding="16">
                                <StackPanel Orientation="Vertical">
                                    <DockPanel>
                                        <TextBlock Text="Parameter"
                                                   FontWeight="Bold"
                                                   FontSize="16"
                                                   DockPanel.Dock="Left" />
                                        <Button Content="Parameter ändern"
                                                DockPanel.Dock="Right"
                                                Click="OnEditParametersClick"
                                                Margin="8,0,0,0" />
                                    </DockPanel>
                                    <TextBlock x:Name="ParametersSummaryText"
                                               Margin="0,8,0,0"
                                               Text="Tmin, Tmax, Sicherheitsmarge werden hier angezeigt." />
                                </StackPanel>
                            </materialDesign:Card>

                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Bericht -->
                <TabItem Header="Bericht">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="16"
                                    Orientation="Vertical">
                            <materialDesign:Card Padding="16">
                                <StackPanel>
                                    <DockPanel>
                                        <TextBlock Text="Bericht"
                                                   FontWeight="Bold"
                                                   FontSize="16"
                                                   DockPanel.Dock="Left" />
                                        <Button Content="Ansicht umschalten (Markdown/Vorschau)"
                                                DockPanel.Dock="Right"
                                                Click="OnToggleReportViewClick"
                                                Margin="8,0,0,0" />
                                    </DockPanel>

                                    <!-- Markdown-Quelle -->
                                    <TextBox x:Name="ReportMarkdownTextBox"
                                             Margin="0,8,0,0"
                                             AcceptsReturn="True"
                                             TextWrapping="Wrap"
                                             IsReadOnly="True"
                                             Height="400"
                                             VerticalScrollBarVisibility="Auto"
                                             materialDesign:HintAssist.Hint="Markdown-Quelltext des Berichts" />

                                    <!-- HTML-Vorschau -->
                                    <Grid Margin="0,8,0,0"
                                          x:Name="ReportPreviewContainer"
                                          Visibility="Collapsed">
                                        <WebBrowser x:Name="ReportPreviewBrowser"
                                                    Height="400" />
                                    </Grid>

                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                Margin="0,12,0,0">
                                        <Button Content="Markdown kopieren"
                                                Margin="0,0,8,0"
                                                Click="OnCopyReportClick" />
                                        <Button Content="Markdown speichern"
                                                Click="OnSaveReportClick" />
                                    </StackPanel>
                                </StackPanel>
                            </materialDesign:Card>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</Window>
