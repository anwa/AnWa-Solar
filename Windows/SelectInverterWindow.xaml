<Window x:Class="AnWaSolar.SelectInverterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Wechselrichter auswählen"
        Width="680"
        Height="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid>
        <DockPanel>
            <materialDesign:ColorZone Mode="PrimaryMid"
                                      DockPanel.Dock="Top"
                                      Padding="12">
                <TextBlock Text="Wechselrichter-Auswahl"
                           Foreground="White"
                           FontSize="16"
                           VerticalAlignment="Center" />
            </materialDesign:ColorZone>

            <StackPanel Margin="12"
                        Orientation="Vertical">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                Margin="0,0,8,0">
                        <TextBlock Text="Hersteller" />
                        <ComboBox x:Name="HerstellerCombo"
                                  IsEditable="False"
                                  SelectionChanged="OnHerstellerSelectionChanged" />
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Margin="8,0,0,0">
                        <TextBlock Text="Modell" />
                        <ComboBox x:Name="ModelCombo"
                                  IsEditable="False"
                                  SelectionChanged="OnModelSelectionChanged" />
                    </StackPanel>
                </Grid>

                <materialDesign:Card Margin="0,12,0,0"
                                     Padding="8">
                    <StackPanel>
                        <TextBlock Text="Details"
                                   FontWeight="Bold" />
                        <Grid Margin="0,8,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0"
                                       Grid.Column="0"
                                       Text="Hersteller" />
                            <TextBlock Grid.Row="0"
                                       Grid.Column="1"
                                       x:Name="DetailHersteller"
                                       Text="-" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Text="Modell" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="1"
                                       x:Name="DetailModel"
                                       Text="-" />
                            <TextBlock Grid.Row="2"
                                       Grid.Column="0"
                                       Text="MPPT-Spannungsbereich (V)" />
                            <TextBlock Grid.Row="2"
                                       Grid.Column="1"
                                       x:Name="DetailMppt"
                                       Text="-" />
                            <TextBlock Grid.Row="3"
                                       Grid.Column="0"
                                       Text="Max. DC-Eingangsspannung (V)" />
                            <TextBlock Grid.Row="3"
                                       Grid.Column="1"
                                       x:Name="DetailVdcMax"
                                       Text="-" />
                            <TextBlock Grid.Row="4"
                                       Grid.Column="0"
                                       Text="Startspannung (V)" />
                            <TextBlock Grid.Row="4"
                                       Grid.Column="1"
                                       x:Name="DetailStart"
                                       Text="-" />
                            <TextBlock Grid.Row="5"
                                       Grid.Column="0"
                                       Text="I_in_max / I_sc_max (A)" />
                            <TextBlock Grid.Row="5"
                                       Grid.Column="1"
                                       x:Name="DetailCurrents"
                                       Text="-" />
                            <TextBlock Grid.Row="6"
                                       Grid.Column="0"
                                       Text="MPPTs / Max. Strings/MPPT" />
                            <TextBlock Grid.Row="6"
                                       Grid.Column="1"
                                       x:Name="DetailMpptCount"
                                       Text="-" />
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,12,0,0">
                    <Button Content="Abbrechen"
                            Margin="0,0,8,0"
                            IsCancel="True" />
                    <Button Content="Übernehmen"
                            IsDefault="True"
                            Click="OnAcceptClick" />
                </StackPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
